Sitemap: {{ base_url }}/sitemap.xml

{% for rule in robots %}
{% for user_agent in rule.user_agents -%}
    User-agent: {{ user_agent }}
{% endfor %}
{% for disallow in rule.disallow -%}
    Disallow: {{ disallow }}
{% endfor %}
{% for allow in rule.allow -%}
    Allow: {{ allow }}
{% endfor %}

{% endfor %}
